    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-config-next": "15.5.2",
    "file-loader": "^6.2.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.3",
    "raw-loader": "^4.0.2",
    "tailwindcss": "^4",
    "tw-animate-css": "^1.3.8",
    "typescript": "^5"
